{
  "scriptFile": "__init__.py",
  "bindings": [
    {
      "name": "mytimer",
      "type": "timerTrigger",
      "direction": "in",
      "schedule": "0 */60 * * * *"
    },
    {
      "name": "inBlob",
      "type": "blob",
      "direction": "in",
      "path": "%BlobContainerPrefix%1/processed_skills_data_{timestamp}.csv",
      "connection": "AzureWebJobsStorage",
      "dataType": "string"
    },
    {
      "name": "outBlob",
      "type": "blob",
      "direction": "out",
      "path": "%BlobContainerPrefix%0/Adzuna_{DateTime}.json",
      "connection": "AzureWebJobsStorage"
    }
  ]
}