{
  "scriptFile": "__init__.py",
  "bindings": [
    {
      "name": "mytimer",
      "type": "timerTrigger",
      "direction": "in",
      "schedule": "0 30 9 * * 1-5"
    },
    {
      "name": "inBlob",
      "type": "blob",
      "direction": "in",
      "path": "%BlobContainer2%/processed_skills_data_latest.csv",
      "connection": "AzureWebJobsStorage",
      "dataType": "string"
    },
    {
      "name": "outBlob",
      "type": "blob",
      "direction": "out",
      "path": "%BlobContainer1%/Adzuna_{DateTime}.json",
      "connection": "AzureWebJobsStorage"
    }
  ]
}